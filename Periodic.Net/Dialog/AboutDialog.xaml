<Window x:Class="AboutDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="About" Icon="about.ico" Height="160" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" >
    <Grid Background="#7BFFFFFF">
        <TextBlock Height="35" Margin="12,12,50,0" Name="NameTextBlock" Text="Name" VerticalAlignment="Top" FontSize="24" />
        <TextBlock Height="23" Margin="12,53,50,0" Name="VersionTextBlock" Text="Version" VerticalAlignment="Top" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,82,0,0" Name="CopyrightTextBlock" Text="Copyright" VerticalAlignment="Top" Width="190" />
        <Button Content="_OK" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="Button1" VerticalAlignment="Bottom" Width="75" IsCancel="True" IsDefault="True" />
        <Image Height="32" HorizontalAlignment="Right" Margin="0,12,12,0" Name="Image1" Stretch="Fill" VerticalAlignment="Top" Width="32" Source="../Images/periodic.net_32.png" />
    </Grid>
</Window>
